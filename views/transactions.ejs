<%- include partial/header.ejs %>


<div class="row">
    <h2>완료된 트렌젝션 목록</h2>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>발신 주소</th>
            <th>수신 주소</th>
            <th>금액</th>
        </tr>
        </thead>
        <tbody>
        <% transactions.done.forEach(transaction => { %>
        <tr>
            <td><%= transaction.from %></td>
            <td><%= transaction.to  %></td>
            <td><%= transaction.amount %></td>
        </tr>
        <% }); %>
        </tbody>
    </table>
</div>

<div class="row">
    <h2>미완료 트렌젝션 목록</h2>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>발신 주소</th>
            <th>수신 주소</th>
            <th>금액</th>
        </tr>
        </thead>
        <tbody>
        <% transactions.pending.forEach(transaction => { %>
        <tr>
            <td><%= transaction.from %></td>
            <td><%= transaction.to  %></td>
            <td><%= transaction.amount %></td>
        </tr>
        <% }); %>
        </tbody>
    </table>
</div>


<%- include partial/footer.ejs %>